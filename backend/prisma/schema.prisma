datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Users {
  user_id  Int    @id @default(autoincrement())
  username String @unique @db.VarChar(255)
  password String
  email    String @unique
  user_firstname String
  user_lastname String

  created_at DateTime
  updated_at DateTime

  weeks Week[]
}

model Recipes {
  recipe_id               Int    @id @default(autoincrement())
  recipe_name             String
  recipe_difficult        Int
  recipe_like_number      Int
  recipe_preparation_time Int
  recipe_cooking_time     Int
  recipe_nb_personne      Int
  recipe_image            String 

  stepes Stepes[]
  weeks  Week[]

  RecipesIngredient RecipesIngredient[]
}


model Stepes {
  stepes_id     String  @id
  stepes_name   String 
  stepes_number Int
  stepes_desc   String @db.LongText

  recipe_id Int

  recipe Recipes @relation(fields: [recipe_id], references: [recipe_id])
}

model Ingredient {
  ingredient_id   Int    @id @default(autoincrement())
  ingredient_name String @db.VarChar(255)
  ingredient_unit String @db.VarChar(10)

  RecipesIngredient RecipesIngredient[]
}

model RecipesIngredient {
  recipe_id     Int
  ingredient_id Int
  quantity      Int

  ingredient Ingredient @relation(fields: [ingredient_id], references: [ingredient_id])

  recipe Recipes @relation(fields: [recipe_id], references: [recipe_id])

  //Cl√© primaire 
  @@id([recipe_id, ingredient_id])
}

model Week {
  week_id    Int      @id
  week_start DateTime
  week_end   DateTime
  user_id    Int
  recipe_id  Int

  user   Users   @relation(fields: [user_id], references: [user_id])
  recipe Recipes @relation(fields: [recipe_id], references: [recipe_id])
}
